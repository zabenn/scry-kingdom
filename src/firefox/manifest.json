{
  "manifest_version": 2,
  "name": "Scry Kingdom",
  "version": "1.0.1",
  "description": "Adds Card Kingdom purchase links to Scryfall",
  "browser_specific_settings": {
    "gecko": {
      "id": "scry-kingdom@zabenn.github.io",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icons/icon-blue.svg",
    "96": "icons/icon-blue.svg",
    "128": "icons/icon-blue.svg"
  },
  "permissions": [
    "https://api.scryfall.com/*",
    "https://www.cardkingdom.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://scryfall.com/card/*"],
      "js": ["contentScript.js"],
      "css": ["index.css"]
    }
  ]
}
